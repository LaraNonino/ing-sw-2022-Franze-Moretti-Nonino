<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.client.View.GUI.ChooseNameScene">
   <children>
      <ImageView fitHeight="400.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/imageChooseName/Personaggi_retro.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="TextFieldNickname" layoutX="226.0" layoutY="217.0" onKeyTyped="#lengthCheck" style="-fx-background-color: pink;">
         <effect>
            <Glow level="0.03" />
         </effect></TextField>
      <Button fx:id="okButton" layoutX="275.0" layoutY="255.0" mnemonicParsing="false" onAction="#nameCheck" text="ok">
         <effect>
            <DropShadow radius="4.75" width="0.0" />
         </effect></Button>
      <Label fx:id="LabelNickname" layoutX="232.0" layoutY="178.0" style="-fx-background-color: pink; -fx-background-radius: 40;" text="Insert the nickname" textAlignment="CENTER">
         <font>
            <Font name="Lucida Handwriting Italic" size="12.0" />
         </font></Label>
   </children>
</AnchorPane>
